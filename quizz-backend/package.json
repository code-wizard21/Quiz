{
  "name": "quizz-backend",
  "version": "1.0.0",
  "description": "Quizz Backend",
  "main": "index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=local node index.js",
    "dev": "cross-env NODE_ENV=local nodemon index.js",
    "build": "cross-env NODE_ENV=local build index.js build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "format": "npm run lint:fix && npm run prettier",
    "zip": "find . -type f -not -path '*/node_modules/*' -not -name '.*' -exec zip -r quizz.zip {} +"
  },
  "dependencies": {
    "agora-token": "^2.0.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.0.0",
    "google-auth-library": "^9.10.0",
    "helmet": "^4.1.0",
    "http-status": "^1.4.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^3.4.4",
    "moment": "^2.24.0",
    "mongodb": "^5.3.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.9.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.1.16",
    "nodemailer": "^6.3.1",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "pm2": "^5.1.0",
    "socket.io": "^4.6.1",
    "stripe": "^14.22.0",
    "swagger-jsdoc": "^6.0.8",
    "swagger-ui-express": "^4.1.6",
    "validator": "^13.0.0",
    "winston": "^3.2.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.7",
    "cross-env": "^7.0.3",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^26.0.1",
    "lint-staged": "^11.0.0",
    "node-mocks-http": "^1.8.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.0.5",
    "supertest": "^6.0.1"
  }
}
